<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aman.chatapplication" >
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".OTP"
            android:label="@string/title_activity_otp" >

        </activity>
        <activity
            android:name=".UserList"
            android:label="UserList" >

        </activity>
        <activity
            android:name=".UserMessages"
            android:label="@string/title_activity_user_messages" >


        </activity>
        <activity
            android:name=".Memes"
            android:label="@string/title_activity_memes" >
            android:parentActivityName="com.example.aman.chatapplication.UserMessages" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aman.chatapplication.UserMessages" />
        </activity>
        <activity
            android:name=".RageComics"
            android:label="@string/title_activity_rage_comics" >
            android:parentActivityName="com.example.aman.chatapplication.RageComics" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aman.chatapplication.UserMessages" />
        </activity>
        <activity
            android:name=".Message"
            android:label="@string/title_activity_message" >
        </activity>
        <activity
            android:name=".CanvasArea"
            android:label="@string/title_activity_text_area" >
