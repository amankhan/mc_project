<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aman.chatapplication.Memes"
    android:id="@+id/rellayout">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar">
    </include>

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/meme1"
        android:src="@drawable/meme1"
        android:background="@android:color/transparent"
        android:layout_marginTop="46dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_below="@+id/tool_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/meme2"
        android:src="@drawable/meme2"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/meme1"
        android:layout_alignBottom="@+id/meme1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/meme1"
        android:layout_toRightOf="@+id/meme1"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/meme3"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_below="@+id/meme1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/meme4"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageButton"
        android:src="@drawable/meme5"
        android:background="@android:color/transparent"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/meme6"
        android:background="@android:color/transparent"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:scaleType="fitXY" />


</RelativeLayout>
</ScrollView>